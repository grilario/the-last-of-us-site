---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <header class="w-full max-w-[1400px] mx-auto absolute top-0 left-0 right-0 bottom-0 z-20 py-5 px-10">
    <nav>
      <ul class="flex justify-end list-none gap-5">
        <li><a class="text-white text-sm font-bold p-1" href="#">Jogo</a></li>
        <li><a class="text-white text-sm font-bold p-1" href="#">Enredo</a></li>
        <li>
          <a class="text-white text-sm font-bold p-1" href="#">Personagens</a>
        </li>
        <li>
          <a class="text-white text-sm font-bold p-1" href="#">Monstros</a>
        </li>
      </ul>
    </nav>
  </header>
  <main>
    <section
      class="w-full min-h-screen bg-[url(/background.jpg)] bg-cover flex items-center px-48 relative"
    >
      <div class="w-[20%]">
        <div class="h-0 overflow-hidden pt-[185.7%] relative">
          <img
            id="logo"
            class="absolute top-0 left-0 w-full h-[0%] object-top object-cover"
            src="/logo.png"
            alt="The Last of Us"
          />
        </div>
      </div>

      <img
        class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce"
        src="/scroll.svg"
        alt="Scroll"
      />
    </section>
  </main>
</Layout>
<script>
  import { animate } from "motion";

  animate("#logo", { height: "100%" }, { duration: 2 });
</script>
