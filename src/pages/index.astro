---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <header class="w-full max-w-[1400px] mx-auto absolute z-20 py-5 px-10">
    <nav>
      <ul class="flex justify-end list-none gap-5">
        <li><a class="text-white text-sm font-bold p-1" href="#">Jogo</a></li>
        <li><a class="text-white text-sm font-bold p-1" href="#">Enredo</a></li>
        <li>
          <a class="text-white text-sm font-bold p-1" href="#">Personagens</a>
        </li>
        <li>
          <a class="text-white text-sm font-bold p-1" href="#">Monstros</a>
        </li>
      </ul>
    </nav>
  </header>
  <main>
    <section
      class="w-full min-h-screen bg-[url(/background.jpg)] bg-cover flex px-48 items-center relative"
    >
      <img class="w-1/4" src="/logo.png" alt="The Last of Us" />
      <img
        class="absolute bottom-8 left-1/2 -translate-x-1/2"
        src="/scroll.svg"
        alt="Scroll"
      />
    </section>
  </main>
</Layout>
